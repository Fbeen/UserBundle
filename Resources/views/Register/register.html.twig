{% extends 'base.html.twig' %}

{% trans_default_domain 'fbeen_user' %}

{% block title -%}
    {{ 'register.title'|trans }}
{%- endblock %}

{% block fbeen_user -%}
    <h1>{{ 'register.header'|trans }}</h1>
    
    {% for flash_message in app.session.flashBag.get('fbeen.user.register') %}
        <div class="alert alert-warning">
            {{ flash_message }}
        </div>
    {% endfor %}

    {{ form_start(form) }}
        {{ form_widget(form) }}
        <div class="form-group">
            <button class="btn btn-lg btn-primary pull-right" type="submit">{{ 'register.form.submit'|trans }}</button>
        </div>
    {{ form_end(form) }}
    
{%- endblock %}
